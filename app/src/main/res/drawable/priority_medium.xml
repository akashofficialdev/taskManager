<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for priority indicator -->
    <solid android:color="@color/light_blue" /> <!-- High priority color -->

    <!-- Rounded corners for the background -->
    <corners android:radius="4dp" /> <!-- Adjust radius as needed -->

    <!-- Optional: Add stroke for outline -->
    <stroke
        android:width="1dp"
        android:color="@android:color/transparent" />
</shape>
